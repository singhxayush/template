{
  "name": "backend-hono-psql-kysely-bun",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "bun run --env-file=.env --hot src/app",
    "build": "bun run ./node_modules/.bin/eslint",
    "test": "bun run build",
    "//_helper": "Base command with explicit paths for binary and config",
    "migrate:cli": "bun -b ./node_modules/.bin/kysely-migrate --config ./src/db/kysely-migrate.config.ts",
    "//_commands": "The actual commands you run",
    "db:migrate:create": "bun run migrate:cli create --name",
    "db:migrate:up": "bun run migrate:cli up",
    "db:migrate:down": "bun run migrate:cli down",
    "db:migrate:list": "bun run migrate:cli list",
    "db:migrate:codegen": "bun run migrate:cli codegen",
    "db:studio": "bun -b ./node_modules/.bin/drizzle-kit studio --config ./src/db/drizzle.config.ts",
    "//_shortcuts": "Standard alias for running pending migrations",
    "db:migrate": "bun run db:migrate:up",
    "ci": "bun run ./node_modules/.bin/eslint && bun run typecheck && bun run test"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.6",
    "@scalar/hono-api-reference": "^0.9.30",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "kysely": "^0.28.9",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.5",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "globals": "^16.5.0",
    "kysely-migrate": "^0.0.16",
    "typescript-eslint": "^8.50.1"
  }
}
