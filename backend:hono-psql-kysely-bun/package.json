{
  "name": "backend-hono-psql-kysely-bun",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "bun run --env-file=.env --hot src/app",
    "build": "bun run ./node_modules/.bin/eslint",
    "ci": "bun run ./node_modules/.bin/eslint && bun run typecheck && bun run test",
    "db:migrate": "kysely migrate:latest",
    "db:migrate:up": "kysely migrate:up",
    "db:migrate:down": "kysely migrate:down",
    "db:migrate:rollback": "kysely migrate:rollback --all",
    "db:migrate:status": "kysely migrate:status",
    "db:reset": "kysely migrate:rollback && kysely migrate:latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.6",
    "@scalar/hono-api-reference": "^0.9.30",
    "better-auth": "^1.4.9",
    "hono": "^4.11.1",
    "kysely": "^0.28.9",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@types/bun": "^1.3.5",
    "@types/pg": "^8.16.0",
    "eslint": "^9.39.2",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "typescript-eslint": "^8.50.1"
  }
}
